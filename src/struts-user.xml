<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="user" namespace="/user" extends="myDefault">
        <action name="toLogin">
            <result>login.jsp</result>
        </action>
        <action name="login" class="userController" method="login">
            <interceptor-ref name="defaultStack"/>
            <result name="success" type="redirect">../index.jsp</result>
            <result name="error" type="redirectAction">toLogin</result>
        </action>
        <action name="logout" class="userController" method="logout">
            <result name="success" type="redirect">/login.jsp</result>
        </action>
        <action name="list" class="userController" method="queryAll">
            <result name="success">/WEB-INF/pages/user/list.jsp</result>
        </action>
    </package>
    <package name="house" namespace="/house" extends="myDefault">
        <action name="list" class="houseController" method="queryAll">
            <result name="success">/WEB-INF/pages/user/house.jsp</result>
        </action>
        <action name="type" class="houseTypeController" method="query">
            <result name="success">/WEB-INF/pages/user/type.jsp</result>
        </action>
    </package>
    <package name="department" namespace="/department" extends="myDefault">
        <action name="list" class="departmentController" method="queryAll">
            <result name="success">/WEB-INF/pages/user/department.jsp</result>
        </action>
    </package>
    <package name="notice" namespace="/notice" extends="myDefault">
        <action name="list" class="noticeController" method="queryAll">
            <result name="success" >/WEB-INF/pages/user/notice.jsp</result>
        </action>
    </package>
</struts>