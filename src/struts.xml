<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.action.excludePattern" value="/static/.*?" />

    <package name="welcome" namespace="/" extends="struts-default">
        <action name="welcome">
            <result >/WEB-INF/pages/welcome.jsp</result>
        </action>
    </package>

    <package name="customer" namespace="/customer" extends="struts-default">
        <action name="list" class="customerAction" method="queryAllUsed">
            <result name="success">/WEB-INF/pages/customer-list.jsp</result>
        </action>
        <action name="detail" class="customerAction" method="detail"/>

    </package>

</struts>
